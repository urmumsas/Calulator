while True:
    

    import time
    import sys

    def calculatorAddFunction():
        num1 = float(input("What is your first number?: "))
        num2 = float(input("What is your second number?: "))
        print("Here is your answer:")
        time.sleep(2)
        print(num1 + num2)
    
    def calculatorSubtractFunction():
        num1 = float(input("What is your first number?: "))
        num2 = float(input("What is your second number?: "))
        print("Here is your answer:")
        time.sleep(1)
        print(num1 - num2)
    
    def calculatorMultiplyFunction():
        num1 = float(input("What is your first number?: "))
        num2 = float(input("What is your second number?: "))
        print("Here is your answer:")
        time.sleep(1)
        print(num1 * num2)
    
    def calculatorDivideFunction():
        num1 = float(input("What is your first number?: "))
        num2 = float(input("What is your second number?: "))
        print("Here is your answer:")
        time.sleep(1)
        print(num1 / num2)
    
    def calculatorMeanFunction():
        NumAmount = float(input("What is your amount of numbers?: "))
        if choice == 1:
            print("Invalid amount of numbers")
